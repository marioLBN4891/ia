<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="ai.smarthome.InfoPersonaliActivity" >
	
	<TextView
    android:id="@+id/text_fragment_infopersonali"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:text="@string/text_fragment_infopersonali"
    android:textSize="@dimen/font_text16" />

    <TableLayout 
    android:id="@+id/tableInfoPersonali"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:layout_marginTop="@dimen/margin25"
    android:layout_below="@+id/text_fragment_infopersonali">

		<TableRow
    	android:id="@+id/tableRow1"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="@dimen/margin5" >

        	<TextView
            android:id="@+id/utenteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/utente"
            android:textSize="@dimen/font_text14" />

            <TextView
            android:id="@+id/utenteEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_text14"
            android:textStyle="bold" />
        
        </TableRow>

		<TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin15" >
            
            <TextView
        	android:id="@+id/modificaMailText"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/modificaMail"
        	android:textSize="@dimen/font_text14"
        	android:textStyle="bold" />

    		<EditText
        	android:id="@+id/mailEditText"
        	android:layout_width="fill_parent"
       	 	android:layout_height="wrap_content"
        	android:inputType="text"
        	android:ems="12"
        	android:textSize="@dimen/font_text14" />
    
        </TableRow>
        
		<TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="@dimen/margin25" >
    
            <TextView
        	android:id="@+id/modificaPasswordText"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="@string/modificaPassword"
        	android:textSize="@dimen/font_text14"
        	android:textStyle="bold" />

    	</TableRow>
		
		<TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="@dimen/margin10" >
    
            <TextView
        	android:id="@+id/vecchiaPasswordText"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/vecchiaPassword"
        	android:textSize="@dimen/font_text14" />

    		<EditText
        	android:id="@+id/vecchiaPasswordEditText"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:inputType="textPassword"
        	android:ems="12"
        	android:textSize="@dimen/font_text14" />
    
		</TableRow>
		
        <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="@dimen/margin10" >
    
            <TextView
        	android:id="@+id/nuovaPasswordText"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/nuovaPassword"
        	android:textSize="@dimen/font_text14" />

    		<EditText
        	android:id="@+id/nuovaPasswordEditText"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:inputType="textPassword"
        	android:ems="12"
        	android:textSize="@dimen/font_text14" />
    
		</TableRow>
       
        <TableRow
        android:id="@+id/tableRow8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10" >
    
        	<TextView
        	android:id="@+id/password2Text"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/password2"
        	android:textSize="@dimen/font_text14" />

    		<EditText
        	android:id="@+id/password2EditText"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:inputType="textPassword"
        	android:ems="12"
        	android:textSize="@dimen/font_text14" />
    
    	</TableRow>
	</TableLayout>

    <ImageButton
    android:id="@+id/infoPersonaliButton"
    android:layout_width="@dimen/dimButtonSaveReg"
    android:layout_height="@dimen/dimButtonSaveReg"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:background="@null"
    android:contentDescription="@string/infoPersonaliButton"
    android:scaleType="fitXY"
    android:onClick="cambiaInfoPersonali"
    android:src="@drawable/save_reg" />
    
</RelativeLayout>