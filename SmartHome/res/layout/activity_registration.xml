<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ai.smarthome.RegistrationActivity" >

	<TextView
      android:id="@+id/cognomeText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_marginTop="25dp"
      android:layout_marginStart="20dp"
      android:layout_marginLeft="20dp"
      android:text="@string/cognome"
      android:textAppearance="?android:attr/textAppearanceMedium" />

   <EditText
      android:id="@+id/cognomeEditText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/cognomeText"
      android:layout_marginStart="20dp"
      android:layout_marginLeft="20dp"
      android:layout_toEndOf="@+id/cognomeText"
      android:layout_toRightOf="@+id/cognomeText"
      android:ems="10" 
      android:inputType="text">

      <requestFocus />
   </EditText>
	
	<TextView
      android:id="@+id/nomeText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_below="@+id/cognomeText"
      android:layout_marginTop="25dp"
      android:layout_marginStart="20dp"
      android:layout_marginLeft="20dp"
      android:text="@string/nome"
      android:textAppearance="?android:attr/textAppearanceMedium" />

   <EditText
      android:id="@+id/nomeEditText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/cognomeEditText"
      android:layout_alignBottom="@+id/nomeText"
      android:layout_marginStart="50dp"
      android:layout_marginLeft="50dp"
      android:layout_toEndOf="@+id/nomeText"
      android:layout_toRightOf="@+id/nomeText"
      android:ems="10" 
      android:inputType="text">

  </EditText>
	
	<TextView
      android:id="@+id/usernameText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_below="@+id/nomeText"
      android:layout_marginTop="25dp"
      android:layout_marginStart="20dp"
      android:layout_marginLeft="20dp"
      android:text="@string/username"
      android:textAppearance="?android:attr/textAppearanceMedium" />

   <EditText
      android:id="@+id/usernameEditText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/usernameText"
      android:layout_marginStart="20dp"
      android:layout_marginLeft="20dp"
      android:layout_toEndOf="@+id/usernameText"
      android:layout_toRightOf="@+id/usernameText"
      android:ems="10" 
      android:inputType="text">
      
   </EditText>

   <TextView
      android:id="@+id/passwordText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignStart="@+id/usernameText"
      android:layout_alignLeft="@+id/usernameText"
      android:layout_below="@+id/usernameText"
      android:layout_marginTop="25dp"
      android:text="@string/password"
      android:textAppearance="?android:attr/textAppearanceMedium" />

   <EditText
      android:id="@+id/passwordEditText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/passwordText"
      android:layout_alignStart="@+id/usernameEditText"
      android:layout_alignLeft="@+id/usernameEditText"
      android:ems="10"
      android:inputType="textPassword" />
   
   <TextView
      android:id="@+id/password2Text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignStart="@+id/passwordText"
      android:layout_alignLeft="@+id/passwordText"
      android:layout_below="@+id/passwordText"
      android:layout_marginTop="10dp"
      android:text="@string/password2"
      android:textAppearance="?android:attr/textAppearanceMedium" />

   <EditText
      android:id="@+id/password2EditText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/password2Text"
      android:layout_alignStart="@+id/passwordEditText"
      android:layout_alignLeft="@+id/passwordEditText"
      android:ems="10"
      android:inputType="textPassword" />

   <Button
      android:id="@+id/registrationButton"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/password2EditText"
      android:layout_centerHorizontal="true"
      android:layout_marginStart="100dp"
      android:layout_marginLeft="100dp"
      android:layout_marginTop="75dp"
      android:onClick="salvaRegistrazione"
      android:text="@string/registration" />
   
	
    
</RelativeLayout>
