<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin" >

	<TextView
    android:id="@+id/text_fragment_avvioveloce1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/text_fragment_avvioveloce1"
    android:textSize="@dimen/font_text14" />

    <GridLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"    
    android:rowCount="1"
    android:columnCount="4"
    android:paddingTop="@dimen/margin10" >
            
		<ImageButton
        android:id="@+id/meteoSoleButton"
        android:layout_width="@dimen/dimButtonConf"
        android:layout_height="@dimen/dimButtonConf"
        android:contentDescription="@string/confVeloceMeteo"
        android:onClick="cambiaMeteoSole"
        android:padding="@dimen/margin5"
        android:scaleType="fitXY"
        android:src="@drawable/meteo_sole" />

        <ImageButton
        android:id="@+id/meteoSerenoButton"
        android:layout_width="@dimen/dimButtonConf"
        android:layout_height="@dimen/dimButtonConf"
        android:contentDescription="@string/confVeloceMeteo"
        android:onClick="cambiaMeteoSereno"
        android:padding="@dimen/margin5"
        android:scaleType="fitXY"
        android:src="@drawable/meteo_sereno" />

        <ImageButton
        android:id="@+id/meteoNuvoleButton"
        android:layout_width="@dimen/dimButtonConf"
        android:layout_height="@dimen/dimButtonConf"
        android:contentDescription="@string/confVeloceMeteo"
        android:onClick="cambiaMeteoNuvole"
        android:padding="@dimen/margin5"
        android:scaleType="fitXY"
        android:src="@drawable/meteo_nuvole" />

        <ImageButton
        android:id="@+id/meteoPioggiaButton"
        android:layout_width="@dimen/dimButtonConf"
        android:layout_height="@dimen/dimButtonConf"
        android:contentDescription="@string/confVeloceMeteo"
        android:onClick="cambiaMeteoPioggia"
        android:padding="@dimen/margin5"
        android:scaleType="fitXY"
        android:src="@drawable/meteo_pioggia" />
        
	</GridLayout>
	
    <TableLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:paddingTop="@dimen/margin20" >
    	
    	<TableRow 
    	android:layout_width="fill_parent"
		android:layout_height="wrap_content" >
    	    
    	    <TextView 
			android:background="@drawable/cell_head" 
			android:textColor="#000" 
			android:textStyle="bold" 
			android:gravity="center_horizontal" 
			android:id="@+id/textView" 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_span="2"
			android:layout_weight="1"
			android:textSize="@dimen/font_text12" 
			android:text="@string/impMeteo"
			android:padding="@dimen/marginTableMeteo" />
    	
    	</TableRow>
    	
		<TableRow 
    	android:layout_width="fill_parent"
		android:layout_height="wrap_content" >	
	
    		<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textView1bis" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="@dimen/font_text12" 
			android:text="@string/data"
			android:padding="@dimen/marginTableMeteo" />
		
			<TextView 
			android:background="@drawable/cell_bodytext" 
			android:id="@+id/textData" 
			android:layout_width="160dp" 
			android:layout_height="wrap_content" 
			android:textSize="@dimen/font_text12"
			android:padding="@dimen/marginTableMeteo"  />
		
		</TableRow>
    	
		<TableRow 
    	android:layout_width="fill_parent"
		android:layout_height="wrap_content" >	
    				
			<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textView1" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="@dimen/font_text12" 
			android:text="@string/loc"
			android:padding="@dimen/marginTableMeteo" />
			
			<TextView 
			android:background="@drawable/cell_bodytext" 
			android:id="@+id/textLoc" 
			android:layout_width="160dp"
			android:layout_height="wrap_content"
			android:textSize="@dimen/font_text12"
			android:padding="@dimen/marginTableMeteo"  />
		
		</TableRow>
    	
		<TableRow 
    	android:layout_width="fill_parent"
		android:layout_height="wrap_content" >	
        
        	<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textView2" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="@dimen/font_text12" 
			android:text="@string/met"
			android:padding="@dimen/marginTableMeteo" />
		
			<TextView 
			android:background="@drawable/cell_bodytext" 
			android:id="@+id/textMeteo" 
			android:layout_width="160dp"
			android:layout_height="wrap_content"
			android:textSize="@dimen/font_text12"
			android:padding="@dimen/marginTableMeteo"  />
		
		</TableRow>
    	
		<TableRow 
    	android:layout_width="fill_parent"
		android:layout_height="wrap_content" >	
		
        	<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textView3" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="@dimen/font_text12" 
			android:text="@string/tempin"
			android:padding="@dimen/marginTableMeteo" />
		
			<TextView 
			android:background="@drawable/cell_bodytext" 
			android:id="@+id/textTemperaturaInterna" 
			android:layout_width="160dp"
			android:layout_height="wrap_content"
			android:textSize="@dimen/font_text12"
			android:padding="@dimen/marginTableMeteo"  />
		
		</TableRow>
    	<TableRow 
    	android:layout_width="fill_parent"
		android:layout_height="wrap_content" >	
		
        	<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textView3_1" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="@dimen/font_text12" 
			android:text="@string/tempout"
			android:padding="@dimen/marginTableMeteo" />
		
			<TextView 
			android:background="@drawable/cell_bodytext" 
			android:id="@+id/textTemperaturaEsterna" 
			android:layout_width="160dp"
			android:layout_height="wrap_content"
			android:textSize="@dimen/font_text12"
			android:padding="@dimen/marginTableMeteo"  />
		
		</TableRow>
		
		<TableRow 
    	android:layout_width="fill_parent"
		android:layout_height="wrap_content" >	
        
        	<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textView4" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="@dimen/font_text12" 
			android:text="@string/umidin" 
			android:padding="@dimen/marginTableMeteo" />
		
			<TextView 
			android:background="@drawable/cell_bodytext" 
			android:id="@+id/textUmiditaInterna" 
			android:layout_width="160dp"
			android:layout_height="wrap_content" 
			android:textSize="@dimen/font_text12"
			android:padding="@dimen/marginTableMeteo"  />
		
		</TableRow>
    	
		<TableRow 
    	android:layout_width="fill_parent"
		android:layout_height="wrap_content" >	
        
        	<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textView4_1" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="@dimen/font_text12" 
			android:text="@string/umidout"
			android:padding="@dimen/marginTableMeteo" />
		
			<TextView 
			android:background="@drawable/cell_bodytext" 
			android:id="@+id/textUmiditaEsterna" 
			android:layout_width="160dp"
			android:layout_height="wrap_content" 
			android:textSize="@dimen/font_text12"
			android:padding="@dimen/marginTableMeteo"  />
		
		</TableRow>
		
		<TableRow 
    	android:layout_width="fill_parent"
		android:layout_height="wrap_content" >	
		
			<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textView5" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="@dimen/font_text12" 
			android:text="@string/vent"
			android:padding="@dimen/marginTableMeteo" />
		
			<TextView 
			android:background="@drawable/cell_bodytext" 
			android:id="@+id/textVento" 
			android:layout_width="160dp" 
			android:layout_height="wrap_content" 
			android:textSize="@dimen/font_text12"
			android:padding="@dimen/marginTableMeteo"  />
		
		</TableRow>
    	
		<TableRow 
    	android:layout_width="fill_parent"
		android:layout_height="wrap_content" >	
		
			<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textView6" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="@dimen/font_text12" 
			android:text="@string/lum"
			android:padding="@dimen/marginTableMeteo" />
		
			<TextView 
			android:background="@drawable/cell_bodytext" 
			android:id="@+id/textLumi" 
			android:layout_width="160dp" 
			android:layout_height="wrap_content" 
			android:textSize="@dimen/font_text12"
			android:padding="@dimen/marginTableMeteo"  />
		
		</TableRow>
		
		<TableRow 
    	android:layout_width="fill_parent"
		android:layout_height="wrap_content" >	
		
			<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textView7" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="@dimen/font_text12" 
			android:text="@string/comp"
			android:padding="@dimen/marginTableMeteo" />
		
			<TextView 
			android:background="@drawable/cell_bodytext" 
			android:id="@+id/textComponenti" 
			android:layout_width="160dp" 
			android:layout_height="wrap_content" 
			android:textSize="@dimen/font_text12"
			android:padding="@dimen/marginTableMeteo"  />
		
		</TableRow>
		
	</TableLayout>
		
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    	<ImageButton
    	android:id="@+id/starSimulazioneButton"
    	android:layout_width="@dimen/dimButtonPlay"
    	android:layout_height="@dimen/dimButtonPlay"
    	android:layout_alignParentBottom="true"
    	android:layout_centerHorizontal="true"
    	android:background="@null"
    	android:contentDescription="@string/startSimulazione"
    	android:onClick="startSimulazione"
    	android:scaleType="fitXY"
    	android:src="@drawable/play" />

	</RelativeLayout>
	
</LinearLayout>