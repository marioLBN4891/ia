<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ai.smarthome.StartActivity" >

    
    <ImageView
        android:id="@+id/logoUnibaImage"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_uniba" 
    	android:contentDescription= "@string/cd_text" />

    <ImageView
        android:id="@+id/scrittaUnibaImage"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_below="@+id/logoUnibaImage"
        android:layout_centerHorizontal="true"
        android:src="@drawable/scritta_uniba" 
        android:contentDescription= "@string/cd_text" />
    
    <ImageView
        android:id="@+id/logoDibImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrittaUnibaImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_dib" 
        android:contentDescription= "@string/cd_text" />
    
    <TextView
        android:id="@+id/startText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoDibImage"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:text="@string/start"
        android:textStyle="bold"
        android:textColor="@color/colore_start_text"
        android:textAppearance="?android:attr/textAppearanceLarge" /> 
        
</RelativeLayout>
