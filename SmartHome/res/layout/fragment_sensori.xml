<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ai.smarthome.fragment.OraFragment" >

	<TextView 
    	android:id="@+id/text_fragment_sensori1"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentStart="true"
    	android:layout_alignParentLeft="true"
      	android:layout_marginTop="10dp"
      	android:layout_marginStart="20dp"
      	android:layout_marginLeft="20dp"
    	android:text="@string/text_fragment_sensori1" />
	
	<Switch
	    android:id="@+id/temperatura"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentStart="true"
    	android:layout_alignParentLeft="true"
	    android:layout_below="@+id/text_fragment_sensori1"
	    android:layout_marginTop="33dp"
	    android:text="@string/temperatura" />
	
	<Switch
	    android:id="@+id/umidita"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentStart="true"
    	android:layout_alignParentLeft="true"
	    android:layout_below="@+id/temperatura"
	    android:layout_marginTop="33dp"
	    android:text="@string/umidita" />
	
	<Switch
	    android:id="@+id/vento"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentStart="true"
    	android:layout_alignParentLeft="true"
	    android:layout_below="@+id/umidita"
	    android:layout_marginTop="33dp"
	    android:text="@string/vento" />
	
	<Switch
	    android:id="@+id/presenza" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentStart="true"
    	android:layout_alignParentLeft="true"
	    android:layout_below="@+id/vento"
	    android:layout_marginTop="33dp"
	    android:text="@string/presenza" />
	
	<Switch
	    android:id="@+id/sonoro"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentStart="true"
    	android:layout_alignParentLeft="true"
	    android:layout_below="@+id/presenza"
	    android:layout_marginTop="33dp"
	    android:text="@string/sonoro" />
	
	
	<Button
        android:id="@+id/cambiaSensoriButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="cambiaSensori"
        android:layout_below="@+id/sonoro" 
    	android:layout_centerHorizontal="true"
      	android:layout_marginTop="45dp"
        android:text="@string/cambiaSensori" />

	
</RelativeLayout>