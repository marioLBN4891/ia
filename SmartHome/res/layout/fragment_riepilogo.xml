<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin" 
tools:context="ai.smarthome.activity.fragmentMain.RiepilogoFragment" >

	<TextView 
    android:id="@+id/text_fragment_sim1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:textSize="@dimen/font_text20" 
    android:textStyle="bold" 
    android:text="@string/text_fragment_sim1" />
	
	<TableLayout 
	android:id="@+id/tabellaMeteo" 
	android:layout_height="wrap_content" 
	android:layout_width="match_parent" 
	android:paddingTop="@dimen/margin15" >
		
		<TableRow 
		android:id="@+id/tableRow1" 
		android:layout_width="match_parent" 
		android:layout_height="wrap_content" >
		
			<TextView 
			android:background="@drawable/cell_head" 
			android:textColor="#000" 
			android:textStyle="bold" 
			android:gravity="center_horizontal" 
			android:id="@+id/textView" 
			android:layout_weight="0.3" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:textSize="@dimen/font_text14" 
			android:text="@string/impMeteo"
			android:padding="@dimen/marginTableMeteo" />
			
		</TableRow>

		<TableRow 
		android:id="@+id/tableRow2" 
		android:layout_width="match_parent" 
		android:layout_height="wrap_content" >
			
			<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textView1" 
			android:layout_weight="0.3" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:textSize="@dimen/font_text14" 
			android:text="@string/loc"
			android:padding="@dimen/marginTableMeteo" />
			
			<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textLoc" 
			android:layout_weight="0.4" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:textSize="@dimen/font_text14"
			android:padding="@dimen/marginTableMeteo"  />
			
		</TableRow>
		
		<TableRow 
		android:id="@+id/tableRow2bis" 
		android:layout_width="match_parent" 
		android:layout_height="wrap_content" >
			
			<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textView1bis" 
			android:layout_weight="0.3" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:textSize="@dimen/font_text14" 
			android:text="@string/data"
			android:padding="@dimen/marginTableMeteo" />
			
			<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textData" 
			android:layout_weight="0.3" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:textSize="@dimen/font_text14"
			android:padding="@dimen/marginTableMeteo"  />
			
			<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textView1ter" 
			android:layout_weight="0.3" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:textSize="@dimen/font_text14" 
			android:text="@string/orario"
			android:padding="@dimen/marginTableMeteo" />
			
			<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textOrario" 
			android:layout_weight="0.3" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:textSize="@dimen/font_text14"
			android:padding="@dimen/marginTableMeteo"  />
			
		</TableRow>
		
		<TableRow 
		android:id="@+id/tableRow3" 
		android:layout_width="match_parent" 
		android:layout_height="wrap_content" >
			
			<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textView2" 
			android:layout_weight="0.3" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:textSize="@dimen/font_text14" 
			android:text="@string/met"
			android:padding="@dimen/marginTableMeteo" />
			
			<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textMeteo" 
			android:layout_weight="0.4" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:textSize="@dimen/font_text14"
			android:padding="@dimen/marginTableMeteo"  />
			
		</TableRow>
		
		<TableRow 
		android:id="@+id/tableRow4" 
		android:layout_width="match_parent" 
		android:layout_height="wrap_content" >
			
			<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textView3" 
			android:layout_weight="0.3" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:textSize="@dimen/font_text14" 
			android:text="@string/temp"
			android:padding="@dimen/marginTableMeteo" />
			
			<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textTemperatura" 
			android:layout_weight="0.4" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:textSize="@dimen/font_text14"
			android:padding="@dimen/marginTableMeteo"  />
			
		</TableRow>
		
		<TableRow 
		android:id="@+id/tableRow5" 
		android:layout_width="match_parent" 
		android:layout_height="wrap_content" >
			
			<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textView4" 
			android:layout_weight="0.3" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:textSize="@dimen/font_text14" 
			android:text="@string/umid"
			android:padding="@dimen/marginTableMeteo" />
			
			<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textUmidita" 
			android:layout_weight="0.4" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:textSize="@dimen/font_text14"
			android:padding="@dimen/marginTableMeteo"  />
			
		</TableRow>
		
		<TableRow 
		android:id="@+id/tableRow6" 
		android:layout_width="match_parent" 
		android:layout_height="wrap_content" >
			
			<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textView5" 
			android:layout_weight="0.3" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:textSize="@dimen/font_text14" 
			android:text="@string/vent"
			android:padding="@dimen/marginTableMeteo" />
			
			<TextView 
			android:background="@drawable/cell_body" 
			android:id="@+id/textVento" 
			android:layout_weight="0.4" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:textSize="@dimen/font_text14"
			android:padding="@dimen/marginTableMeteo"  />
			
		</TableRow>
	
	</TableLayout>
		
	<TextView 
    android:id="@+id/text_fragment_sim5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tabellaMeteo"
    android:layout_marginTop="@dimen/margin10"
    android:text="@string/text_fragment_sim5"
    android:textStyle="bold"
    android:textSize="@dimen/font_text14" />
	
	<TextView
    android:id="@+id/compTv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/text_fragment_sim5"
    android:textSize="@dimen/font_text12" />
	
	<TextView
    android:id="@+id/compRadio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/compTv"
    android:textSize="@dimen/font_text12" />
	
	<TextView
    android:id="@+id/compMacchinaCaffe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/compRadio"
    android:textSize="@dimen/font_text12" />
	
	<TextView
    android:id="@+id/compCondizionatore"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/compMacchinaCaffe"
    android:textSize="@dimen/font_text12" />
	
	<TextView
    android:id="@+id/compBalcone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/compCondizionatore"
    android:textSize="@dimen/font_text12" />
	
	<TextView
    android:id="@+id/compIlluminazione"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/compBalcone"
    android:textSize="@dimen/font_text12" />
	
	<TextView 
    android:id="@+id/text_fragment_sim6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/compIlluminazione"
    android:layout_marginTop="@dimen/margin10"
    android:text="@string/text_fragment_sim6"
    android:textStyle="bold"
    android:textSize="@dimen/font_text14" />
	
	<TextView
    android:id="@+id/sensTemperatura"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/text_fragment_sim6"
    android:textSize="@dimen/font_text12" />
	
	<TextView
    android:id="@+id/sensUmidita"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/sensTemperatura"
    android:textSize="@dimen/font_text12" />
	
	<TextView
    android:id="@+id/sensVento"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/sensUmidita"
    android:textSize="@dimen/font_text12" />
	
	<TextView
    android:id="@+id/sensPresenza"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/sensVento"
    android:textSize="@dimen/font_text12" />
	
	<TextView
    android:id="@+id/sensSonoro"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/sensPresenza"
    android:textSize="@dimen/font_text12" />
	
	<ImageButton
    android:id="@+id/starSimulazioneButton"
    android:layout_width="@dimen/dimButtonPlay"
    android:layout_height="@dimen/dimButtonPlay"
    android:scaleType="fitXY"
    android:background="@null"
    android:layout_alignParentBottom="true"
	android:layout_centerHorizontal="true"
    android:contentDescription="@string/startSimulazione"
    android:onClick="startSimulazione"
    android:src="@drawable/play" />

</RelativeLayout>