<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" 
    tools:context="ai.smarthome.fragment.OraFragment" >

	<TextView 
    	android:id="@+id/text_fragment_sim1"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerHorizontal="true"
      	android:layout_marginTop="15dp"
      	android:textAppearance="?android:attr/textAppearanceLarge" 
    	android:text="@string/text_fragment_sim1" />
	
	<TextView 
    	android:id="@+id/text_fragment_sim2"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentStart="true"
    	android:layout_alignParentLeft="true"
    	android:layout_below="@+id/text_fragment_sim1"
      	android:layout_marginTop="20dp"
      	android:layout_marginStart="20dp"
      	android:layout_marginLeft="20dp"
    	android:text="@string/text_fragment_sim2" />
	
	<TextView
      android:id="@+id/dataText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/text_fragment_sim2"
      android:layout_marginStart="20dp"
      android:layout_marginLeft="20dp"
      android:layout_toEndOf="@+id/text_fragment_sim2"
      android:layout_toRightOf="@+id/text_fragment_sim2" />
   
	<TextView 
		android:id="@+id/text_fragment_sim3"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignBottom="@+id/dataText"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_toEndOf="@+id/dataText"
        android:layout_toRightOf="@+id/dataText"
    	android:text="@string/text_fragment_sim3" />
	
	<TextView
      android:id="@+id/orarioText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/text_fragment_sim3"
      android:layout_marginStart="20dp"
      android:layout_marginLeft="20dp"
      android:layout_toEndOf="@+id/text_fragment_sim3"
      android:layout_toRightOf="@+id/text_fragment_sim3" />
	
	<TextView 
    	android:id="@+id/text_fragment_sim4"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentStart="true"
    	android:layout_alignParentLeft="true"
    	android:layout_below="@+id/text_fragment_sim3"
      	android:layout_marginTop="10dp"
      	android:layout_marginStart="20dp"
      	android:layout_marginLeft="20dp"
    	android:text="@string/text_fragment_sim4" />
	
	<TextView
      android:id="@+id/sensoriText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/text_fragment_sim4"
      android:layout_alignParentBottom="false"
      android:layout_marginStart="20dp"
      android:layout_marginLeft="20dp"
      android:layout_toEndOf="@+id/text_fragment_sim4"
      android:layout_toRightOf="@+id/text_fragment_sim4" />
	
	<Button
        android:id="@+id/starSimulazioneButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="startSimulazione"
        android:layout_below="@+id/text_fragment_sim4" 
    	android:layout_centerHorizontal="true"
      	android:layout_marginTop="45dp"
        android:text="@string/startSimulazione" />

</RelativeLayout>