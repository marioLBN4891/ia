<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="ai.smarthome.fragment.MeteoFragment" >

	<TextView 
    android:id="@+id/text_fragment_meteo1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:text="@string/text_fragment_meteo1" 
    android:textSize="@dimen/font_text16" />
	
	<TextView 
    android:id="@+id/textMeteo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/text_fragment_meteo1" 
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="@dimen/margin15"
    android:layout_marginStart="@dimen/margin20"
    android:layout_marginLeft="@dimen/margin20" 
    android:text="@string/meteo"
    android:textStyle="bold"
    android:textSize="@dimen/font_text14" />
	
	<SeekBar
	android:id="@+id/seekMeteo"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_below="@+id/textMeteo"
	android:max="100"
	android:progress="50" />
	
	<TextView 
    android:id="@+id/textTemperaturaEsterna"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/seekMeteo" 
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="@dimen/margin5"
    android:layout_marginStart="@dimen/margin20"
    android:layout_marginLeft="@dimen/margin20" 
    android:text="@string/temperaturaEsterna"
    android:textStyle="bold"
    android:textSize="@dimen/font_text14" />
	
	<SeekBar
	android:id="@+id/seekTemperaturaEsterna"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_below="@+id/textTemperaturaEsterna"
	android:max="100"
	android:progress="50" />
	
	<TextView 
    android:id="@+id/textTemperaturaInterna"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/seekTemperaturaEsterna" 
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="@dimen/margin5"
    android:layout_marginStart="@dimen/margin20"
    android:layout_marginLeft="@dimen/margin20" 
    android:text="@string/temperaturaInterna"
    android:textStyle="bold"
    android:textSize="@dimen/font_text14" />
	
	<SeekBar
	android:id="@+id/seekTemperaturaInterna"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_below="@+id/textTemperaturaInterna"
	android:max="100"
	android:progress="50" />
	
	<TextView 
    android:id="@+id/textUmidita"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/seekTemperaturaInterna" 
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="@dimen/margin5"
    android:layout_marginStart="@dimen/margin20"
    android:layout_marginLeft="@dimen/margin20" 
    android:text="@string/umidita"
    android:textStyle="bold"
    android:textSize="@dimen/font_text14" />
	
	<SeekBar
	android:id="@+id/seekUmidita"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_below="@+id/textUmidita"
	android:max="100"
	android:progress="50" />
	
	<TextView 
    android:id="@+id/textVento"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/seekUmidita" 
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="@dimen/margin5"
    android:layout_marginStart="@dimen/margin20"
    android:layout_marginLeft="@dimen/margin20" 
    android:text="@string/vento"
    android:textStyle="bold"
    android:textSize="@dimen/font_text14" />
	
	<SeekBar
	android:id="@+id/seekVento"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_below="@+id/textVento"
	android:max="100"
	android:progress="50" />
	
	<TextView 
    android:id="@+id/textVisibilita"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/seekVento" 
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="@dimen/margin5"
    android:layout_marginStart="@dimen/margin20"
    android:layout_marginLeft="@dimen/margin20" 
    android:text="@string/visibilita"
    android:textStyle="bold"
    android:textSize="@dimen/font_text14" />
	
	<SeekBar
	android:id="@+id/seekVisibilita"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_below="@+id/textVisibilita"
	android:max="100"
	android:progress="50" />
	
	<ImageButton
    android:id="@+id/cambiaMeteoButton"
    android:layout_width="@dimen/dimButtonSave"
    android:layout_height="@dimen/dimButtonSave"
    android:scaleType="fitXY"
    android:background="@null"
    android:layout_alignParentBottom="true"
	android:layout_centerHorizontal="true"
    android:contentDescription="@string/cambiaMeteo"
    android:onClick="cambiaMeteo"
    android:src="@drawable/salva" />
	
</RelativeLayout>