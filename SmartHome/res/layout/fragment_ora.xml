<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" 
    tools:context="ai.smarthome.fragment.OraFragment" >

	<TextView 
    	android:id="@+id/text_fragment_ora1"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentStart="true"
    	android:layout_alignParentLeft="true"
      	android:layout_marginTop="10dp"
      	android:layout_marginStart="20dp"
      	android:layout_marginLeft="20dp"
    	android:text="@string/text_fragment_ora1" />
	
	<TextView 
    	android:id="@+id/orarioText"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/text_fragment_ora1"
    	android:layout_alignParentStart="true"
    	android:layout_alignParentLeft="true"
      	android:layout_marginTop="30dp"
      	android:layout_marginStart="20dp"
      	android:layout_marginLeft="20dp"
    	/>

	<TextView 
    	android:id="@+id/text_fragment_ora2"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/orarioText"
    	android:layout_alignParentStart="true"
    	android:layout_alignParentLeft="true"
      	android:layout_marginTop="30dp"
      	android:layout_marginStart="20dp"
      	android:layout_marginLeft="20dp"
    	android:text="@string/text_fragment_ora2" />
	
	<TimePicker
        android:id="@+id/timePicker"
        android:layout_width="150dp"
        android:layout_height="100dp" 
        android:layout_below="@+id/text_fragment_ora2" 
    	android:layout_centerHorizontal="true"
      	android:layout_marginTop="25dp" />

	
	<Button
        android:id="@+id/cambiaOrarioButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="cambiaOrario"
        android:layout_below="@+id/timePicker" 
    	android:layout_centerHorizontal="true"
      	android:layout_marginTop="45dp"
        android:text="@string/cambiaOrario" />

</RelativeLayout>