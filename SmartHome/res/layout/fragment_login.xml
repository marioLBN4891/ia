<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:facebook="http://schemas.android.com/apk/res-auto"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
 >


	
	<TableLayout
    android:id="@+id/tableLogin"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

		<TableRow
    	android:id="@+id/tableRow1"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="@dimen/margin10" >
			
		    <com.facebook.widget.LoginButton
        	android:id="@+id/fb_login_button"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="5dp"
        	facebook:confirm_logout="false"
        	facebook:fetch_user_info="true" />
		    
		</TableRow>
	
		<TableRow
    	android:id="@+id/tableRow2"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="@dimen/margin30" >
			
		    <TextView
    		android:id="@+id/mailText"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="@string/mail"  
    		android:textStyle="bold"
    		android:textSize="@dimen/font_text14" />
		    
		</TableRow>
		
		<TableRow
    	android:id="@+id/tableRow3"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content" >
		    
			<EditText
    		android:id="@+id/mailEditText"
    		android:layout_width="250dp"
    		android:layout_height="wrap_content"
    		android:inputType="text"
    		android:textSize="@dimen/font_text14" >
			</EditText>

		</TableRow>
		
		<TableRow
    	android:id="@+id/tableRow4"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="@dimen/margin10" >
			
		    <TextView
    		android:id="@+id/passwordText"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="@string/password"  
    		android:textStyle="bold"
    		android:textSize="@dimen/font_text14" />
		    
		</TableRow>
		
		<TableRow
    	android:id="@+id/tableRow5"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content" >
		    
    		<EditText
    		android:id="@+id/passwordEditText"
    		android:layout_width="300dp"
    		android:layout_height="wrap_content"
    		android:inputType="textPassword"
    		android:textSize="@dimen/font_text14" />
    	
    	</TableRow>
    	
		<TableRow
    	android:id="@+id/tableRow6"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" >

   			<Button
   			android:id="@+id/passwordDimenticataButton"
   			android:layout_width="fill_parent"
   			android:layout_height="wrap_content"
   			android:gravity="end"
   			android:background="@null"
   			android:text="@string/passwordDimenticata"
   			android:textColor="@color/blu"
   			android:onClick="passwordDimenticata"
   			android:textSize="@dimen/font_text10" />

   			
   		</TableRow>
   		
   	</TableLayout>
    		
   <ImageButton
    android:id="@+id/loginButton"
    android:layout_width="@dimen/dimButtonLogin"
    android:layout_height="@dimen/dimButtonLogin"
    android:scaleType="fitXY"
    android:background="@null"
    android:layout_below="@+id/tableLogin"
    android:layout_marginTop="@dimen/margin30"
    android:layout_centerHorizontal="true"
    android:contentDescription="@string/loginButton"
    android:onClick="login"
    android:src="@drawable/login" />
	
</RelativeLayout>